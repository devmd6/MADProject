<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:layout_margin="6dp"
              android:descendantFocusability="blocksDescendants"
              android:layout_alignParentStart="true"
              android:padding="6dp"
              android:weightSum="1">


            <Button
                android:id = "@+id/button_edit"
                android:padding="2dp"
                android:layout_height= "30dp"
                android:layout_width="30dp"
                android:background="@drawable/ic_action_edit"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                        <TextView
                            android:id="@+id/value_text1"
                            android:padding="6dp"
                            android:layout_height= "wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#f804548c"/>
                        <TextView
                            android:id="@+id/value_text2"
                            android:layout_below="@id/value_text1"
                            android:layout_marginStart="20dp"
                            android:layout_height= "wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#ff8c6589"/>
            </RelativeLayout>
            <Button
                android:id = "@+id/button_delete"
                android:layout_height= "30dp"
                android:layout_width="30dp"
                android:padding="2dp"
                android:background="@drawable/ic_action_discard"/>

            <ImageView
                android:id = "@+id/button_detail"
                android:visibility="invisible"
                android:layout_height= "30dp"
                android:layout_width="30dp"
                android:padding="2dp"
                android:src="@drawable/ic_action_next_item_dark"/>

</LinearLayout>